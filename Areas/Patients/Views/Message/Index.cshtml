@model IEnumerable<MyOnlineClinic.Web.Models.MessageViewModels>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Patients/Views/Shared/_PatientPartial.cshtml";
}

<style>
    .sorting, .sorting_asc, .sorting_desc {
        background: none;
    }
</style>
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
            <div class="title_right pull-right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="row">
                        <div class="col-sm-7">
                            <h2 class="default-title" style=" color: #0aa49c">Inbox</h2>
                        </div>
                        <div class="col-sm-5 text-right">
                            <button type="button" id="btnNew" class="btn btn-primary btn-sm">New</button>
                            <button type="button" id="btnDelete" class="btn btn-primary btn-sm">
                                Approve
                            </button>
                            <button type="button" id="btnActivate" class="btn btn-primary btn-sm">
                                Active
                            </button>
                            <button type="button" id="btnBack" class="btn btn-primary btn-sm">Back</button>
                        </div>
                    </div>
                    <div class="x_content">
                        <table id="example" class="table table-striped responsive-utilities jambo_table">
                            <thead>
                                <tr>

                                    <th>Nr</th>
                                    <th>Title</th>
                                    <th>Sender Name</th>
                                    <th>Date</th>                                    
                                </tr>
                            </thead>
                            <tbody>
                                @{ int count = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr style="background-color:red;">
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.SenderName</td>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                            count = count + 1;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
        </div>
    </div>
</div>


<script src="~/AdminAssets/js/datatables/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        var oTable = $('#example').dataTable({
            "bProcessing": true,
            "iDisplayLength": 10,
            "bPaginate": true,
            "sPaginationType": "full_numbers"
        });
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

