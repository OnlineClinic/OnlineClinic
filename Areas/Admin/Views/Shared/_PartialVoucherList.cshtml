@model MyOnlineClinic.Web.Models.SearchParametersViewModel
<script src="/scripts/jquery.plugin.js"></script>
<script src="/scripts/jquery.datepick.js"></script>
<link href="~/Scripts/jquery.datepick.css" rel="stylesheet" />

@using (Html.BeginForm("VoucherAssign", "Voucher", FormMethod.Post))
{
    <div class="vouchers_area">
        <ul>

            <li>
                @Html.DropDownListFor(x => x.Voucherstatus, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Used", Value = "1"},
                                           new SelectListItem { Text = "Not Used", Value = "0"},
                                           //new SelectListItem { Text = "Assigned", Value = "2"},
                                           //new SelectListItem { Text = "Not Assigned", Value = "4"},
                                          }, "Status", new { @class = "form-control select" })
            </li>


            <li>
                @Html.DropDownListFor(x => x.UsedId, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Doctor", Value = "2"},
                                           new SelectListItem { Text = "Patient", Value = "3"},
                                          }, "Select", new { @class = "form-control select" })
            </li>

            <li>

                @Html.DropDownListFor(x => x.GeneratedBy, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "MocAdmin", Value = "1"},
                                           new SelectListItem { Text = "OrgAdmin", Value = "4"},
                                             new SelectListItem { Text = "ClinicAdmin", Value = "5"},
                                          }, "Generated by", new { @class = "form-control select" })
            </li>
            <li>
                @Html.TextBoxFor(x => x.FromDate, new { @class = "form-control", name = "MiddleName", placeholder = "From Date" })
            </li>
            <li>
                @Html.TextBoxFor(x => x.ToDate, new { @class = "form-control", name = "MiddleName", placeholder = "To Date" })
            </li>
            <li style="width:10%;">
                <span class="input-group-btn" id="input">
                    <button class="btn btn-default orgastion" type="submit" name="search"><i class="fa fa-search" style="color:#fff;"></i></button>
                </span>
            </li>
        </ul>
    </div>
}
<script>
    $(document).ready(function () {
        $('#FromDate').datepick({ dateFormat: 'dd-mm-yyyy', maxDate: 0 });
        $('#ToDate').datepick({ dateFormat: 'dd-mm-yyyy', maxDate: 0 });
    });
</script>
