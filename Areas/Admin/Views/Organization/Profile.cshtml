@model MyOnlineClinic.Web.Models.UserViewModel
@using JQueryUIHelpers;
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Update Profile</h2>

                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm("Profile", "Organization", FormMethod.Post, new { @class = "form-horizontal form-label-left", enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(m => m.MemberId)
                            @Html.HiddenFor(m => m.LoginId)
                            @Html.HiddenFor(m => m.ProfilePic)
                            @Html.HiddenFor(m => m.LoginName)
                            @Html.HiddenFor(m => m.EmailAddress)
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                    Title <span class="required">*</span>
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control col-md-7 col-xs-12", name = "Title", placeholder = "Mr", required = "required" })
                                    @*<input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="name" placeholder="both name(s) e.g Jon Doe" required="required" type="text">*@
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                    First Name <span class="required">*</span>
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control col-md-7 col-xs-12" })
                                    @*@Html.TextBoxFor(x => x.Category, new { @class = "form-control col-md-7 col-xs-12", name = "Title", placeholder = "Enter news title", required = "required" })
                                        <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="name" placeholder="both name(s) e.g Jon Doe" required="required" type="text">*@
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    Middle Name
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.MiddleName, new { @class = "form-control col-md-7 col-xs-12", name = "MiddleName", placeholder = "Enter middle name" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    Sur Name
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.SurName, new { @class = "form-control col-md-7 col-xs-12", name = "SurName", placeholder = "Enter surname" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    User Name
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.LoginName, new { @class = "form-control col-md-7 col-xs-12", name = "SurName", placeholder = "Enter surname", disabled = "disabled" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    Email
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control col-md-7 col-xs-12", name = "EmailAddress", placeholder = "Enter email address", disabled = "disabled" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    Phone
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control col-md-7 col-xs-12", name = "PhoneNumber", placeholder = "Enter phone number" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    Mobile
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.MobileNumber, new { @class = "form-control col-md-7 col-xs-12", name = "MobileNumber", placeholder = "Enter mobile number" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    Fax
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.FaxNumber, new { @class = "form-control col-md-7 col-xs-12", name = "FaxNumber", placeholder = "Enter fax number" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    Post code
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control col-md-7 col-xs-12", name = "PostCode", placeholder = "Enter post code" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12">
                                    Date of birth
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.JQueryUI().DatepickerFor(x => x.DOB, new { @class = "date-picker form-control col-md-7 col-xs-12", name = "DOB", placeholder = "Enter date of birth", required = "required" }).DateFormat("dd/MM/yyyy")
                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="email">
                                    Address Line1
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.Address1, new { @class = "form-control col-md-7 col-xs-12", name = "Address1", placeholder = "Enter Address line1", required = "required" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12">
                                    Address Line2
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBoxFor(x => x.Address2, new { @class = "form-control col-md-7 col-xs-12", name = "Address2", placeholder = "Enter Address line2", required = "required" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12">
                                    Profile Picture
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    <input type="file" name="ProfilePic" id="ProfilePic" />
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-2">
                                    <button type="button" id="btnCancel" class="btn btn-primary">Cancel</button>
                                    <button id="send" type="submit" class="btn btn-success">Update</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/AdminAssets/js/validator/validator.js"></script>
<script>
    $('#btnCancel').click(function () {
        window.location = "/admin/new/index";
    })

    $(document).ready(function () {

        if ($("#NewsId").val() > 0) {

            $('#btnAddNewPhoto').removeAttr('disabled', 'disabled');

            $("#ImagePanel").show();
            $('#btnAddNewPhoto').click(function () {
                window.location.href = "/admin/newsphotos/AddNewsPhotos/" + $("#NewsId").val();
            });
        }
        else {
            $("#ImagePanel").hide();
            $("#btnAddNewPhoto").attr('disabled', 'disabled');
        }
        $('.date-picker').daterangepicker({
            singleDatePicker: true,
            calender_style: "picker_4",
            format: 'DD/MM/YYYY'
        });
        $('#Showcase').change(function () {
            if ($(this).is(":checked")) {
                if ($("#NewsId").val() == '') {
                    $("#show-case-msg").append("<div class='alert alert-danger'>Please upload image before marking showcase.</div>");
                    window.setTimeout(function () {
                        $(".alert-danger").fadeTo(500, 0).slideUp(500, function () {
                            $(this).remove();
                        });
                    }, 5000);
                }
                else {
                    $.ajax({
                        type: 'get',
                        url: '/admin/news/CheckShowCaseImages',
                        data: 'newsId=' + $("#NewsId").val(),
                        success: function (data) {
                            if (data == "NotExists") {
                                $("#show-case-msg").append("<div class='alert alert-danger'>Please upload image before marking showcase.</div>");
                                window.setTimeout(function () {
                                    $(".alert-danger").fadeTo(500, 0).slideUp(500, function () {
                                        $(this).remove();
                                        $('#Showcase').attr('checked', false);
                                    });
                                }, 5000);
                            }
                        }
                    });

                }
            }

        });


        // initialize the validator function
        validator.message['date'] = 'not a real date';

        // validate a field on "blur" event, a 'select' on 'change' event & a '.reuired' classed multifield on 'keyup':
        $('form')
            .on('blur', 'input[required], input.optional, select.required', validator.checkField)
            .on('change', 'select.required', validator.checkField)
            .on('keypress', 'input[required][pattern]', validator.keypress);

        $('.multi.required')
            .on('keyup blur', 'input', function () {
                validator.checkField.apply($(this).siblings().last()[0]);
            });

        // bind the validation to the form submit event
        //$('#send').click('submit');//.prop('disabled', true);

        $('form').submit(function (e) {
            e.preventDefault();
            var submit = true;
            // evaluate the form using generic validaing
            if (!validator.checkAll($(this))) {
                submit = false;
            }

            if (submit)
                this.submit();
            return false;
        });

        /* FOR DEMO ONLY */
        $('#vfields').change(function () {
            $('form').toggleClass('mode2');
        }).prop('checked', false);

        $('#alerts').change(function () {
            validator.defaults.alerts = (this.checked) ? false : true;
            if (this.checked)
                $('form .alert').remove();
        }).prop('checked', false)
    });
</script>
