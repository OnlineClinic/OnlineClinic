@model MyOnlineClinic.Web.Models.LoginViewModel
@{
    ViewBag.Title = "AdminIndex";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Admin Login</title>

    <!-- Bootstrap -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,300,600,700' rel='stylesheet' type='text/css'>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style type="text/css">
        body {
            margin: 0 auto;
            background: #2A3F54;
            display: table;
            vertical-align: middle;
            width: 32%;
            min-height: 100%;
            margin-top: 9%;
        }

        .bg {
            border: 1px solid #677E95;
            content: '';
            display: table-cell;
            vertical-align: middle;
            height: 420px;
            padding: 20px;
            background-color: #f1f1f1;
            border-radius: 10px;
        }

            .bg h1 {
                color: #0aa49c;
            }

        .input_box {
            margin-top: 20px;
            text-align: center;
        }

            .input_box .email {
                float: left;
                width: 20%;
                color: #fff;
                padding-top: 10px;
            }

            .input_box .inputtext {
                width: 80%;
                float: left;
            }

        input {
            width: 70%;
            padding: 5px 10px;
        }

        .bg img {
            width: 100px;
            height: 100px;
        }

        .input_bx {
            width: 100%;
            padding-left: 58px;
            padding-top: 10px;
        }

        .chack_checkboxes {
            float: left;
            width: 48%;
        }

            .chack_checkboxes input {
                width: 10px;
            }

        .for_got {
            float: left;
            width: 50%;
        }

        hr {
            border-top: dotted 1px #2A3F54;
        }

        .submit {
            text-align: center;
            float: left;
            margin-top: 15px;
            width: 100%;
        }

        .btn-success {
            width: 70%;
            background-color: #0aa49c;
            font-size: 16px;
            border: 0px;
            font-weight: bold;
        }

            .btn-success:hover {
                background-color: #2A3F54;
                border: 0px;
            }
    </style>
</head>
<body>
    <div class="bg">
        <div class="img text-center">
            <img src="/AdminAssets/images/CircleLogo.png">
        </div>
        <h1 class="text-center">Admin Login</h1>
        <hr>
        @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <span class="text-danger">@TempData["ErrorMessage"]</span>
            <span class="text-success">@ViewBag.SuccessMsg</span>
            <div class="input_box">
                <div class="input-text"> 
                    @Html.TextBoxFor(m => m.Username)
                    @Html.ValidationMessageFor(m => m.Username)
                @*<input type="text" placeholder="User Name">*@</div>
            </div>
            <div class="input_box">
                <div class="input-text">                
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                @*<input type="password" placeholder="Password">*@
                </div>
            </div>
            <div class="input_bx">
                <div class="chack_checkboxes">
                    <input type="checkbox" class="css_checkbox">
                    <label class="css-label"><a href="#">Remember me</a></label>
                </div>

                <div class="for_got">
                    <a href="#" style="display:none;">Forgot password?</a>
                </div>
            </div>
            <div class="submit text-right">
                <button type="submit" class="btn btn-success ">Submit</button>
            </div>
        }
    </div>




    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>

</body>
</html>

