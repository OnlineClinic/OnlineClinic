            dataType: "Json",
            success: function (data) {
                if (data != null) {
                    var htmlString = data.split('¶');
                    opViewDiv.innerHTML = htmlString[0];
                    opDiv.innerHTML = htmlString[1];
                    //opDiv.innerHTML = data;  
                    $("#spinner").hide();
                    var options = {
                        "backdrop": "static"
                    };
                    $('#MedicinePopUp').modal(options);
                }
            },
            error: function () {
                alert('Error occured');
            }
        });       
      
    });


