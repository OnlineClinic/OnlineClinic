    $(".printpop").click(function () {
        $("#spinner").show();
        var opDiv = document.getElementById("dvPrint");
        var opViewDiv = document.getElementById("dvView");
        var id = $(this).attr('data-role');
       
        $.ajax({
            type: "POST",
            url: '/admin/ManagePrescription/GetMedicationHTML',
