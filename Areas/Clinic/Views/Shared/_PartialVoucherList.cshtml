@model MyOnlineClinic.Web.Models.SearchParametersViewModel
<script src="/scripts/jquery.plugin.js"></script>
<script src="/scripts/jquery.datepick.js"></script>
<link href="~/Scripts/jquery.datepick.css" rel="stylesheet" />
<style>
    select {
        height: 35px;
    }
</style>
@using (Html.BeginForm("VoucherAssign", "Voucher", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
{
    <div class="row">
        <div class="col-sm-7">
            <h2 class="default-title" style=" color: #0aa49c">Voucher List</h2>
        </div>
    </div>
    <div class="row" style="margin:10px 0px 20px 0px;">
        <div class="col-sm-2">
            <label style="width:100%;">Voucher Status</label>
            @Html.DropDownListFor(x => x.Voucherstatus, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Used", Value = "1"},
                                           new SelectListItem { Text = "Not Used", Value = "0"},
                                           //new SelectListItem { Text = "Assigned", Value = "2"},
                                           //new SelectListItem { Text = "Not Assigned", Value = "4"},
                                          }, "Status")

            @*@Html.TextBoxFor(x => x.Voucherstatus, new { @class = "form-control col-md-7 col-xs-12 text_row", name = "VoucherStatus", placeholder = "Voucher Status" })*@
        </div>
        <div class="col-sm-2">
            <label style="width:100%;">Assigned To</label>
            @Html.DropDownListFor(x => x.UsedId, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Doctor", Value = "2"},
                                           new SelectListItem { Text = "Patient", Value = "3"},
                                          }, "Select")

            @* <input style="width: 100%; padding: 5px; line-height: normal;" type="text" id="txtToDate" />*@

        </div>
        <div class="col-sm-2">
            <label style="width:100%;">Generated By</label>
            @*@Html.TextBoxFor(x => x.GeneratedBy, new { @class = "form-control col-md-7 col-xs-12 text_row", name = "MiddleName", placeholder = "Generated By" })*@
            @Html.DropDownListFor(x => x.GeneratedBy, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "MocAdmin", Value = "1"},
                                           new SelectListItem { Text = "OrgAdmin", Value = "4"},
                                          }, "Generated by")

        </div>
        <div class="col-sm-2 ">
            <label style="width:100%;">From Date</label>
            @*@Html.TextBoxFor(x => x.FromDate, new { @class = "form-control col-md-7 col-xs-12 text_row", name = "DOB", placeholder = "Date of Birth*", required = "required" })*@
            @Html.TextBoxFor(x => x.FromDate, new { @class = "form-control col-md-7 col-xs-12 text_row", name = "MiddleName", placeholder = "From Date" })
        </div>
        <div class="col-sm-2">
            <label style="width:100%;">To Date</label>
            @Html.TextBoxFor(x => x.ToDate, new { @class = "form-control col-md-7 col-xs-12 text_row", name = "MiddleName", placeholder = "To Date" })

        </div>
        <div class="col-sm-1">
            <button id="btnSearch" class="btn btn-success" style="margin: 23px 0 0 0;border:0px;">
                Search
            </button>
        </div>
    </div>
    @*@Html.Partial("_PartialVoucherList", Model)*@
}
<script>
    $(document).ready(function () {
        $('#FromDate').datepick({ dateFormat: 'dd-mm-yyyy', maxDate: 0 });
        $('#ToDate').datepick({ dateFormat: 'dd-mm-yyyy', maxDate: 0 });
    });
</script>