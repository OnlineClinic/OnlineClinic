@model MyOnlineClinic.Web.Models.ClinicUserViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Clinic/Views/Shared/_ClinicLayout.cshtml";
}

@using JQueryUIHelpers;
<style>
    div {
        text-transform: capitalize;
    }
</style>
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="prople" style="width:29%; font-size: 22px; color: #0aa49c">Clinic User Information</div>
                        <div class="clearfix"></div>
                        <div class="form-horizontal form-label-left">

                            <div class="col-md-12 col-xs-12">
                                <div class="form-horizontal form-label-left">

                                    <div class="row">
                                        <div class="col-md-12">
                                            <img src="@Model.ProfilePic" height="50" width="50" class="img-circle" />
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label class="col-md-4 col-sm-4 col-xs-12">
                                            User Name
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            @Model.FirstName @Model.SurName
                                        </div>
                                    </div>

                                    <div class="item form-group">
                                        <label class="col-md-4 col-sm-4 col-xs-12">
                                            Address Line1:
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            @Model.Address1
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label class="col-md-4 col-sm-4 col-xs-12">
                                            Address Line2:
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            @Model.Address2
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label class="col-md-4 col-sm-4 col-xs-12">
                                            Phone:
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            @Model.PhoneNumber
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label class="col-md-4 col-sm-4 col-xs-12">
                                            Fax:
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            @Model.FaxNumber
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label class="col-md-4 col-sm-4 col-xs-12">
                                            Post code:
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            @Model.PostCode
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-9">
                                    <button type="submit" class="btn btn-primary" onclick="window.history.back()">Back</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

