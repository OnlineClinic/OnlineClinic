                                                                @Html.ValidationMessageFor(x => x.ConcelhosId)
                                                            </label>
                                                        </section>
                                                        <section class="col-xs-6">
                                                            <label class="select">
                                                                Freguesia
                                                                @Html.DropDownListFor(x => x.FergusiaId, new SelectList(Model.CityList, "LookUpCityId", "LookUpCityName"), "-Freguesia-")
                                                                @Html.ValidationMessageFor(x => x.FergusiaId)
                                                            </label>
                                                        </section>
                                                    </div>
                                                    <div class="row">
                                                        <section class="col-xs-6">
                                                            <label class="label">Telephone</label>
                                                            <label class="input">
                                                                <i class="icon-append fa fa-user"></i>
                                                                @Html.TextBoxFor(x => x.Telephone1)
                                                                @Html.ValidationMessageFor(x => x.Telephone1)
                                                            </label>
                                                        </section>
                                                        <section class="col-xs-6">
                                                            <label class="label">Telephone2</label>
                                                            <label class="input">
                                                                <i class="icon-append fa fa-user"></i>
                                                                @Html.TextBoxFor(x => x.Telephone2)
                                                            </label>
                                                        </section>
                                                    </div>
                                                    <div class="row">
                                                        <section class="col-xs-6">
                                                            <label class="label">Email</label>
                                                            <label class="input">
                                                                <i class="icon-append fa fa-envelope-o"></i>
                                                                @Html.TextBoxFor(x => x.Email)
                                                                @Html.ValidationMessageFor(x => x.Email)
                                                            </label>
                                                        </section>
                                                        <section class="col-xs-6">
                                                            <label class="label">Email2</label>
                                                            <label class="input">
                                                                <i class="icon-append fa fa-envelope-o"></i>
                                                                @Html.TextBoxFor(x => x.Email2)
                                                                @Html.ValidationMessageFor(x => x.Email2)
                                                            </label>
                                                        </section>
                                                    </div>
                                                    <div class="row">
                                                        <section class="col-xs-6">
                                                            <label class="label">Website</label>
                                                            <label class="input">
                                                                <i class="icon-append fa fa-phone"></i>
                                                                @Html.TextBoxFor(x => x.Website)
                                                                @Html.ValidationMessageFor(x => x.Website)
                                                            </label>
                                                        </section>

                                                    </div>
                                                    <div class="row">
                                                        <section class="col-xs-12">
                                                            <label class="label">Descrição</label>
                                                            <label class="textarea">
                                                                @Html.TextAreaFor(x => x.Description)
                                                                @Html.ValidationMessageFor(x => x.Description)
                                                            </label>
                                                        </section>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <button type="submit" class="btn btn-base btn-icon btn-icon-right btn-sign-in pull-right">
                                                            <span>Register Now</span>
                                                        </button>
                                                    </div>
                                                </section>
                                            </fieldset>


                                        </div>
                                    }
                                </div>
                                <div class="form-footer">
                                    <p>Already have an account? <a href="sign-in-1.html">Click here to sign in.</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>






