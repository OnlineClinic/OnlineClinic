@model IEnumerable<MyOnlineClinic.Web.Models.NewsViewModel>

@if (Model.Count() > 0)
{
    <div class="light-gray p-15 ba mb-20">
        @foreach (var item in Model)
        {
            var photoUrl = "/images/noImage.jpg";
            if (item.Photo != null)
            {
                photoUrl = "/UploadedFiles/NewsPhoto/373x240/" + item.Photo.ImagePath;
            }
            <div class="wp-block article grid bb">
                <div class="article-image ">
                    @if (item.Photo != null)
                    {<img src="@photoUrl" alt="@item.Title">}
                    else
                    {<img src="@photoUrl" height="240" width="373" alt="@item.Title">}
                </div>
                <span class="article-category">@item.SubCategoryName</span>
                <h3 class="title">
                    <a href="" hidefocus="true">@item.Title</a>
                </h3>
                <p>
                    @item.Summary
                </p>
            </div>
        }
    </div>
}

