@model List<MyOnlineClinic.Web.Models.ClassifiedPartialViewModel>
@if (Model.Count > 0)
{
    <div class="widget-recent widget-recent-comments light-gray ba classified-aside">
        <div class="inner p-15">
            <ul>
                @foreach (var item in Model)
                {
                    var classifiedImageUrl = "/images/noImage.jpg";
                    if (item.ClassifiedPhotos != null)
                    {
                        classifiedImageUrl = item.ClassifiedPhotos.ImagePath;
                    }
                    <li class="clearfix">
                        <a href="javascript:void(0);" class="post-thumb anchor-redirect" data-category="@item.CategoryId" data-id="@item.SlugUrl" data-title="@item.Title"><img src="@classifiedImageUrl" alt="@item.Title" class="img-responsive"></a>
                        <span class="comment-author"><a href="javascript:void(0);" class="anchor-redirect" data-category="@item.CategoryId" data-id="@item.SlugUrl" data-title="@item.Title">@item.Title</a></span>
                        <span class="comment-entry">@item.DistritoName</span>
                        <span class="comment-entry">@item.Price €</span>
                    </li>
                }
            </ul>
        </div>
    </div>
}
<script>
    $(document).ready(function () {       
        $(".anchor-redirect").on("click", function () {
            
            var id = $(this).data("id");
            if (id != '') {
                if ($(this).data("category") == '1') {
                    window.location.href = "/Classificados/" + id;
                }
                else if ($(this).data("category") == "2" || $(this).data("category") == "6") {
                    window.location.href = "/Casa/" + id;
                }
                else if ($(this).data("category") == "3") {
                    window.location.href = "/Empregos/" + id;
                }
                else {
                    window.location.href = "/Classificado/" + id;
                }
            }
        });
    });
 </script>
